<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="com.sjtu.admin.model.Commodity" table="commodity">

		<id name="commodityId" column="commodityId"
			type="java.lang.Long">

			<!-- The generator-class attribute of @hibernate.id is deprecated, use the @hibernate.generator tag instead -->
			<generator class="native"></generator>

		</id>

		<property name="smallCatalogId" column="smallCatalogId"
			length="20">

		</property>

		<property name="commodityName" column="commodityName"
			length="50" not-null="true">

		</property>

		<property name="commodityPrice" column="commodityPrice"
			length="8" not-null="true">

		</property>

		<property name="commodityDiscount" column="commodityDiscount"
			length="8">

		</property>

		<property name="description" column="description"
			length="400">

		</property>

		<property name="productor" column="productor" length="50"
			not-null="true">

		</property>

		<property name="picture" column="picture" length="100">

		</property>

		<property name="fileaddress" column="fileaddress"
			length="255">

		</property>

	</class>

</hibernate-mapping>

