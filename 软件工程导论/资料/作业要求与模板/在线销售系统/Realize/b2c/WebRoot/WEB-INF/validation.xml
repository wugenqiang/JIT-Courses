<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE form-validation PUBLIC "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1.3//EN" "http://jakarta.apache.org/commons/dtds/validator_1_1_3.dtd">

<form-validation>
	<global>
		<constant>
			<constant-name>phone</constant-name>
			<constant-value>
				^\(?(\d{3})\)?[-| ]?(\d{3})[-| ]?(\d{4})$
			</constant-value>
		</constant>
		<constant>
			<constant-name>zip</constant-name>
			<constant-value>^\d{5}\d*$</constant-value>
		</constant>
		<constant>
			<constant-name>currency</constant-name>
			<constant-value>
				^\d{1,3}(,?\d{1,3})*\.?(\d{1,2})?$
			</constant-value>
		</constant>
	</global>
	<formset>
		<form name="uploadForm">
			<field property="name" depends="required">
				<arg0 key="uploadForm.name" />
			</field>
			<!-- Client-side Javascript won't catch this, but server-side will -->
			<field property="file" depends="required">
				<arg0 key="uploadForm.file" />
			</field>
		</form>
	</formset>

	<formset>
		<!--
			Define form validation config in validation-forms.xml
		-->

		<form name="userForm">
			<field property="username" depends="required">

				<arg0 key="userForm.username" />
			</field>
			<field property="password" depends="required,twofields">
				<msg name="twofields" key="errors.twofields" />

				<arg0 key="userForm.password" />
				<arg1 key="userForm.confirmPassword" />
				<var>
					<var-name>secondProperty</var-name>
					<var-value>confirmPassword</var-value>
				</var>
			</field>
			<field property="confirmPassword" depends="required">

				<arg0 key="userForm.confirmPassword" />
			</field>
			<field property="passwordHint" depends="required">

				<arg0 key="userForm.passwordHint" />
			</field>
			<field property="firstName" depends="required">

				<arg0 key="userForm.firstName" />
			</field>
			<field property="lastName" depends="required">

				<arg0 key="userForm.lastName" />
			</field>
			<field property="email" depends="required,email">

				<arg0 key="userForm.email" />
			</field>
			<field property="phoneNumber" depends="mask">
				<msg name="mask" key="errors.phone" />

				<arg0 key="userForm.phoneNumber" />
				<var>
					<var-name>mask</var-name>
					<var-value>${phone}</var-value>
				</var>
			</field>
			<field property="addressForm.city" depends="required">

				<arg0 key="userForm.addressForm.city" />
			</field>
			<field property="addressForm.province" depends="required">

				<arg0 key="userForm.addressForm.province" />
			</field>
			<field property="addressForm.postalCode"
				depends="required,mask">
				<msg name="mask" key="errors.zip" />

				<arg0 key="userForm.addressForm.postalCode" />
				<var>
					<var-name>mask</var-name>
					<var-value>${zip}</var-value>
				</var>
			</field>
		</form>
		<form name="addressForm">
			<field property="city" depends="required">

				<arg0 key="addressForm.city" />
			</field>
			<field property="province" depends="required">

				<arg0 key="addressForm.province" />
			</field>
			<field property="postalCode" depends="required,mask">
				<msg name="mask" key="errors.zip" />

				<arg0 key="addressForm.postalCode" />
				<var>
					<var-name>mask</var-name>
					<var-value>${zip}</var-value>
				</var>
			</field>
		</form>
		<form name="largeCatalogForm">
			<field property="largeCatalogName" depends="required">
				<arg0 key="largeCatalogForm.largeCatalogName" />
			</field>
		</form>
		<form name="midCatalogForm">
			<field property="midCatalogName" depends="required">
				<arg0 key="midCatalogForm.midCatalogName" />
			</field>
		</form>
		<form name="smallCatalogForm">
			<field property="smallCatalogName" depends="required">
				<arg0 key="smallCatalogForm.smallCatalogName" />
			</field>
		</form>
		<form name="commodityForm">
			<field property="commodityName" depends="required">
				<arg0 key="commodityForm.commodityName" />
			</field>
		</form>
		<form name="cartForm">
			<field property="cartCommodityNumber" depends="required">
				<arg0 key="cartForm.cartCommodityNumber" />
			</field>
		</form>
		<form name="cartCommodityForm">
			<field property="commodityNumber" depends="required">
				<arg0 key="cartCommodityForm.commodityNumber" />
			</field>
		</form>
		<form name="orderaForm">
			<field property="cartCommodityId" depends="required">
				<arg0 key="orderaForm.cartCommodityId" />
			</field>
		</form>
	</formset>
</form-validation>
